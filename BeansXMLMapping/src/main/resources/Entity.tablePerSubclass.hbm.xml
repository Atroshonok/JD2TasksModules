<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.atr.hibtasks.beans" auto-import="false"  catalog="task1_db">
	<class name="Entity" table="entity_table_per_subclass">
		<id name="id" type="long" column="F_ID">
			<generator class="increment"/>
		</id>
		<property name="name" column="F_NAME" type="string"/>
		<joined-subclass name="Admin" table="admin_table_per_subclass">
			<key column="F_ID"/>
			<property name="login" type="string"/>
			<property name="password" type="string"/>
		</joined-subclass>
		<joined-subclass name="Address" table="address_table_per_subclass">
			<key column="F_ID"/>
			<property name="country" type="string"/>
			<property name="city" type="string"/>
			<property name="street" type="string"/>
			<property name="houseNumber" type="int"/>
		</joined-subclass>
	</class>	
</hibernate-mapping>
<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.atr.hibtasks.beans"	auto-import="false" catalog="task1_db">
	<class name="Product" table="products">
		<id name="id" column="ID" type="long">
			<generator class="increment" />
		</id>
		<property name="name" column="NAME" type="string" access="property"/>
		<property name="price" column="PRICE" type="double" access="field" not-null="true"/>
		<property name="category" column="CATEGORY" type="com.atr.hibtasks.beans.ProductCategory" />
		<property name="count" column="COUNT" type="int" access="field"/>
		<property name="description" column="DESCRIPTION" type="text" />
	</class>
</hibernate-mapping>